<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    >
    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:maxHeight="20dp"
        android:maxWidth="30dp"
        android:layout_gravity="center"
        android:src="@drawable/thunder"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/left"
            >
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pnombre"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvTelefonoCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ptelefono"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/left2"
            >
        <ImageButton
            android:id="@+id/btnResumeLikes"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:paddingLeft="30dp"
            android:background="@drawable/bone_icon_like_9"
            />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView >